<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:layout_marginVertical="@dimen/_4ssp"
    app:cardBackgroundColor="@color/cardchange"
    app:cardCornerRadius="@dimen/_10sdp"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Utilities_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Andrea Cotes"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Utilities_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="5 min ago"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_11ssp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/Utilities_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="Problem with hot water"
            android:textColor="@color/hint"
            android:textSize="@dimen/_11ssp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>