<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:layout_marginVertical="@dimen/_4sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5ssp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cashbackname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Received from John"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/cashbackpanding"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:background="@drawable/btn"
                    android:backgroundTint="@color/editbox"
                    android:gravity="center"
                    android:padding="@dimen/_2sdp"
                    android:text="Panding"
                    android:textColor="@color/textblue"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>


            <TextView
                android:id="@+id/cashbacktime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.00 PM"
                android:textColor="#918A8A"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹"
                android:textColor="@color/green"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/cashbackprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3,982.0"
                android:textColor="@color/green"
                android:textSize="@dimen/_11ssp" />

        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>