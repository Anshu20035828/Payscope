<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_recycler_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginVertical="@dimen/_5sdp"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="HardcodedText">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_3sdp"
        android:elevation="@dimen/_12sdp"
        app:cardBackgroundColor="@color/editbox"
        app:cardCornerRadius="@dimen/_20sdp"
        app:strokeColor="@color/editbox"
        app:strokeWidth="@dimen/_1sdp">

        <ImageView
            android:id="@+id/home_recycler_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/mobile_recharge"
            tools:ignore="ContentDescription" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/home_recycler_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Bill Payment"
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp" />
</LinearLayout>

