<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="HardcodedText">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/investment_Img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/wallet"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />

            <RelativeLayout
                android:id="@+id/investmentLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/investmentOfferImg"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/applogo" />

                <TextView
                    android:id="@+id/investment_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toEndOf="@id/investmentOfferImg"
                    android:text="Title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />


            </RelativeLayout>


            <TextView
                android:id="@+id/investment_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/investment_Button"
                android:layout_below="@id/investmentLinear"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Financial investments come in different forms, such as mutual funds, unit linked investment plans, endowment plans, stocks, bonds and more."
                android:textColor="@color/white" />

            <Button
                android:id="@+id/investment_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:backgroundTint="@color/blue"
                android:text="Investment"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>