<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/_3ssp"
    android:layout_marginTop="@dimen/_7sdp"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textOption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:text="UPI/Bank account"
            android:textColor="@color/hint"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBoxOption1"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_10ssp" />
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginVertical="@dimen/_7sdp"
        android:background="@color/editLine"
        android:clickable="false"
        android:focusable="false"
        android:inputType="none" />


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textOption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:text="UPI Lite"
            android:textColor="@color/hint"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBoxOption2"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_10ssp" />
    </RelativeLayout>

</LinearLayout>